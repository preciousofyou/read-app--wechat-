/* search.wxss */

.sear-head{
  background-color: #ededed;
  height: 75rpx;
  padding-top: 20rpx;
  border-bottom: 1rpx #c2c2c2 solid;
  position: fixed;
  top:0;
  left:0; 
  width:100%;
  z-index: 3;
}
.inp-fr{
  width: 90%;
  background-color: #fff; 
  margin: 0 auto;
  border-radius: 50rpx;
  height: 60rpx; 
  border: 1rpx solid #c7c7c7;
  display: flex;
  align-items: center;
}
.inp-fr image{
  width: 40rpx;
  height: 40rpx;
  margin: 0 20rpx 0 20rpx;
}
.inp-fr input{
  font-size: 24rpx;
  width: 82%;
  color: #bfbfbf;
}

/* book-list s  */
.books-list{
  background-color: #fcfcfc;
  padding: 0 40rpx;
  overflow: hidden;
  margin-top: 10rpx;
}
.books-list .list-head{
  height: 80rpx;
  line-height: 80rpx;
  overflow: hidden;
}
.books-list .list-head .bo-l-t{
  font-size: 30rpx;
  display: inline-block;
  font-weight: 500;
  color: #363a3d;
}
.books-list .list-head .bo-more{
  font-size: 22rpx;
  float: right;
  color: #7b7e80;
}
.books-list .im-ti-cont{
   display: flex; 
   justify-content: space-between; 
   overflow: hidden;
   flex-wrap: wrap;
   padding-bottom: 30rpx;
}
.books-list .im-ti-cont .con-it{
  display: inline-block;
  width: 180rpx;
  overflow: hidden;
  margin-top: 20rpx;
}
.books-list .im-ti-cont .con-it .img-box{
  width: 180rpx;
  height: 240rpx;
  vertical-align: middle;
  overflow: hidden;
}
.books-list .im-ti-cont .con-it .img-box image{
  width: 180rpx;
  height: 240rpx;
}
.books-list .im-ti-cont .con-it .title-box{
  width: 180rpx;
  font-size: 24rpx;
  padding: 10rpx 0;
  color: #363a3d;
  text-overflow: ellipsis;
  height: 54rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
