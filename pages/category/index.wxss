/* pages/category/index.wxss */
@import "../template-list/template-list.wxss";

.category{
  overflow: visible;
}
.cate-tab{
  overflow: visible;
  display: flex;
  margin-top: 96rpx;
}
.cate-tab .tab-list{
  background-color: #f4f4f4;
  width: 25%;
  overflow: visible;
  display: fixed;
  top: 96rpx;
  left:0;
}
.cate-tab .tab-list .tab-box{
  width: 100%;
  text-align: center;
  border-bottom: 1rpx solid #ececec;
}
.cate-tab .tab-list .tab-box .tab-name{
  font-size: 28rpx;
  color: #363a3d;
  line-height: 140rpx;
  position: relative;
}
.cate-tab .tab-list .tab-box .tab-name.cur-tab{
  background-color: #fcfcfc;
}
.cate-tab .tab-list .tab-box .tab-name.cur-tab::after{
  content: '';
  width: 2px;
  height: 100%;
  background-color: #2ac795;
  position: absolute;
  left:0;
  top: 0;
}
.cate-tab .tab-right{
  /* position: absolute;
  left: 100%;
  top:0; */
  /* display: flex;     */
  /* display: inlien-block; */
  background-color: #fcfcfc; 
   /* justify-content:space-between;   */
  /* box-sizing: content-box; */
  /* flex-wrap: warp; */
  width: 75%;
  padding: 0 12%;
}
.cate-tab .tab-right .r-list{
  width: 42%;
  text-align: center; 
  display: flex;  
  float: left;
  justify-content:space-between; 
  margin: 10% 0; 
}
.cate-tab .tab-right .r-list:nth-child(2n){
  margin-left: 16%
}
.cate-tab .tab-right image{
  width: 60rpx;
  height: 80rpx;
  box-shadow: 0 0 2px #f2f2f2;
}
.cate-tab .tab-right .i-text{
  font-size: 26rpx;
  width: 180rpx;
  line-height: 80rpx; 
  text-align: left;
  text-indent: 15rpx;
  color: #7b7e80;
}